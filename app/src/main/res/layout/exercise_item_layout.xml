<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/exercise_item_parent"
    android:padding="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/exercise_item_photo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_launcher_background" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/left_item">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Push up"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/exercise_item_name"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:text="Lorem ipsum dolere esem et edasad"
                android:layout_below="@+id/exercise_item_name"
                android:id="@+id/exercise_item_desc"
                android:textSize="12dp"
                android:layout_marginTop="5dp"
                />
        </RelativeLayout>


        </LinearLayout>

</RelativeLayout>